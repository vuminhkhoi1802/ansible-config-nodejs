parser: babel-eslint

extends:
  - airbnb

plugins:
  - jest
  - react

env:
  es6: true
  jest: true
  browser: true

rules:
  radix: 0
  no-console: 0
  no-plusplus: 0
  no-unreachable: 0
  global-require: 0
  no-param-reassign: 0
  no-underscore-dangle: 0
  no-restricted-syntax: 0
  object-curly-newline: 0
  react/jsx-filename-extension: [1, { extensions: ['.js', '.jsx'] }]
